<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New destination</h1>
        <div class="col-6 offset-3">
            <form action="/destination" method='POST' novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title" x>title</label>
                    <input class="form-control" type="text" id="title" placeholder="enter your name"
                        name="destination[title]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" id="location" placeholder="place"
                        name="destination[location]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" placeholder="image url" name="destination[image]"
                        required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    
                </div>
                <div class="mb-3">
                    <label class="form-label" for="travelcost">travel cost</label>
                    <div class="input-group">
                        <span class="input-group-text" id="travelcost-label">Rs</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="travelcost"
                            aria-describedby="travelcost-label" name="destination[travelcost]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">description</label>
                        <textarea class="form-control" type="text" id="description" name="destination[description]" 
                        required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                        
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Add destination</button>
                    </div>
            </form>
            <a href="/destination">view all destination</a>

        </div>
    </div>


   